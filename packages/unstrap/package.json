    "keywords": [
        "api",
        "factory",
        "REST",
        "framework-agnostic",
        "typescript",
        "strapi"
    ],
    "dependencies": {
        "zod": "4.1.12"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {},
    "repository": {
        "type": "git",
        "url": "https://github.com/nurbxfit/loompi",
        "directory": "packages/loompi"
    },
