{
    "name": "loompi",
    "version": "0.1.0",
    "description": "Core package for Framework-agnostic API factory toolkit inspired by Strapi",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
