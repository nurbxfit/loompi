{
    "name": "@loompi/drizzle",
    "version": "0.0.1-alpha.0",
    "description": "Drizzle ORM adapter for loompi",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "loompi": "workspace:*"
    },
    "peerDependencies": {
        "drizzle-orm": "^0.44.7"
    },
    "devDependencies": {
        "drizzle-orm": "^0.44.7",
        "tsup": "8.5.1",
        "typescript": "^5.9.3",
        "rimraf": "^6.1.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nurbxfit/loompi",
        "directory": "packages/loompi-drizzle"
    },
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT"
}